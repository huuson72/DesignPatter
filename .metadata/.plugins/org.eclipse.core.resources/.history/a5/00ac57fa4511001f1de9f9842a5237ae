package composition;

import java.awt.Color;

public class Main {
    public static void main(String[] args) {
        Button btnX = new Button("Đóng lại", Color.YELLOW);
        Label lblThongBao = new Label("Test", Color.GREEN);

        Panel pnl = new Panel(Color.GREEN);
        Panel pnl2 = new Panel(Color.YELLOW);
        pnl.add(pnl2);
        pnl2.add(new Button("XXX", Color.CYAN));

        pnl.add(btnX);
        pnl.add(lblThongBao);
        pnl.setBackColor(Color.RED);

        // Kiểm tra màu nền của các thành phần
        System.out.println("Màu nền của pnl: " + pnl.getBackColor());
        System.out.println("Màu nền của pnl2: " + pnl2.getBackColor());
        System.out.println("Màu nền của btnX: " + btnX.getBackColor());
        System.out.println("Màu nền của lblThongBao: " + lblThongBao.getBackColor());
    }
}
